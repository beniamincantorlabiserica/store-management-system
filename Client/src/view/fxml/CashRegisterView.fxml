<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/null" fx:controller="view.controller.CashRegisterViewController">
    <TableView fx:id="table" layoutX="-3.0" prefHeight="400.0" prefWidth="302.0">
        <columns>
            <TableColumn fx:id="id" prefWidth="32.0" text="Id"/>
            <TableColumn fx:id="item" prefWidth="120.0" text="Item"/>
            <TableColumn fx:id="quantity" prefWidth="75.0" text="Quantity"/>
            <TableColumn fx:id="price" prefWidth="75.0" text="Price"/>
        </columns>
    </TableView>
    <Button layoutX="514.0" layoutY="28.0" mnemonicParsing="false" onAction="#onCheckoutPressed"
            text="Checkout"/>
    <Label layoutX="344.0" layoutY="30.0" prefHeight="20.0" prefWidth="47.0" text="Total:">
        <font>
            <Font size="16.0"/>
        </font>
    </Label>
    <TextField fx:id="scanInput" layoutX="341.0" layoutY="292.0"/>
    <Label layoutX="344.0" layoutY="265.0" prefHeight="17.0" prefWidth="155.0" text="Enter new item"/>
    <Label fx:id="totalPrice" layoutX="391.0" layoutY="30.0" text="Label">
        <font>
            <Font size="16.0"/>
        </font>
    </Label>
    <Button layoutX="514.0" layoutY="292.0" mnemonicParsing="false" onAction="#onScanPressed"
            text="Scan Item"/>
    <Button layoutX="525.0" layoutY="327.0" mnemonicParsing="false" onAction="#onLogoutButtonPressed"
            text="Log Out"/>
    <Button layoutX="515.0" layoutY="86.0" mnemonicParsing="false"
            onAction="#onInventoryButtonPressed" text="Inventory"/>
</AnchorPane>
